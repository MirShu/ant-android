<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="App.Title" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="AppPopTheme" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="actionBarItemBackground">@mipmap/ic_more_menu_bg</item>
    </style>

    <style name="spotsDialogDefault" parent="android:Theme.DeviceDefault.Light.Dialog" tools:targetApi="ice_cream_sandwich">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">Loadingâ€¦</item>
        <item name="DialogSpotCount">5</item>
        <item name="DialogTitleSize">16dp</item>
        <item name="DialogTitleColor">@color/text_color_dark</item>
    </style>

    <style name="split_vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">@color/light_gray</item>
    </style>

    <style name="split_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">@color/light_gray</item>
    </style>

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light"></style>

    <style name="Widget_GifView" parent="AppBaseTheme"></style>

    <style name="default_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="transparent_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="dialog_theme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/transparent_dialog</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="loading_theme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/transparent_dialog</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="customDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="customProgressDialog" parent="@style/customDialog">
        <item name="android:windowBackground">@drawable/bg_round_corner_half_transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="timeTextStyle" parent="AppBaseTheme">
        <item name="TimeTextSize">16sp</item>
        <item name="TimeTextColor">@color/color_F95667</item>
    </style>

    <style name="LightCircularProgressView">
        <item name="pv_autostart">false</item>
        <item name="pv_circular">true</item>
        <item name="pv_progressStyle">@style/LightCircularProgressDrawable</item>
        <item name="pv_progressMode">indeterminate</item>
    </style>

    <style name="DarkCircularProgressView">
        <item name="pv_autostart">false</item>
        <item name="pv_circular">true</item>
        <item name="pv_progressStyle">@style/DarkCircularProgressDrawable</item>
        <item name="pv_progressMode">indeterminate</item>
    </style>

    <style name="DarkCircularProgressDrawable" parent="Material.Drawable.CircularProgress">
        <item name="cpd_strokeColor">#90ffffff</item>
        <item name="cpd_reverse">true</item>
        <item name="cpd_strokeSize">4dp</item>
    </style>

    <style name="LightCircularProgressDrawable" parent="Material.Drawable.CircularProgress">
        <item name="cpd_strokeColor">@color/colorPrimary</item>
        <item name="cpd_strokeSize">1dp</item>
    </style>

    <style name="SimpleDialogLight" parent="Material.App.Dialog.Simple.Light">
        <item name="di_inAnimation">@anim/anim_scale_in</item>
        <item name="di_outAnimation">@anim/anim_scale_out</item>
        <item name="android:layout_width">match_parent</item>
        <item name="di_actionTextColor">@color/colorPrimary</item>
        <item name="di_titleTextColor">@color/text_color_dark</item>
        <item name="di_checkBoxStyle">@style/Material.Drawable.CheckBox</item>
        <item name="rbd_strokeColor">@color/colorPrimary</item>
        <item name="cbd_strokeColor">@color/colorPrimary</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="CustomerCheckBox" parent="Material.Drawable.CheckBox">
        <item name="rbd_strokeColor">@color/colorPrimary</item>
        <item name="cbd_strokeColor">@color/colorPrimary</item>
    </style>

    <style name="winning_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>
