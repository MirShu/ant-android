<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/dmax_spots_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/title_margin"
        android:text="?attr/DialogTitleText"
        android:textAppearance="?attr/DialogTitleAppearance"
        android:textColor="?attr/DialogTitleColor"
        android:textSize="?attr/DialogTitleSize" />

    <com.myyg.widget.loading.ProgressLayout
        android:id="@+id/dmax_spots_progress"
        android:layout_width="@dimen/progress_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/progress_margin" />

</LinearLayout>